<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutMain"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivPhoto"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/profile" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/profile2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:id="@+id/tvFullName"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Shubham Shinde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:visibility="visible"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:id="@+id/ivDelete"
                        android:src="@drawable/delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/mobile_small"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/tvMobile"
                        android:textSize="10sp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"
                        android:text="9876543210"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/location_small"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:id="@+id/tvAddress"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Maharashtra- Thane - Dahisar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_view"
                        android:id="@+id/ivView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"></ImageView>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/idcard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:id="@+id/tvMgnregaId"
                        android:textSize="9dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSyncFailed"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@id/layoutMain"
            android:background="@color/myred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@string/beneficiary_upload_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>