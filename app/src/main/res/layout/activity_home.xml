<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.activities.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/layoutLabourRegistrationsOffline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="10"
                android:background="#EEEBFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_weight="4"
                    android:src="@drawable/ic_person_add"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="@color/appBlue"></ImageView>

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:text="@string/registration_saved_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@color/appBlue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvRegistrationCount"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_weight="6"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:text="@string/entries_to_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


                <androidx.cardview.widget.CardView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></ImageView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/card1"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/layoutAddedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="10"
                android:background="#EEEBFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_weight="4"
                    android:src="@drawable/ic_list"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="@color/appBlue"></ImageView>

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:text="@string/user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@color/appBlue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:id="@+id/tvAddedBeneficiaryCount"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_weight="6"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="16dp"
                    android:visibility="invisible"
                    android:text="@string/entries_to_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


                <androidx.cardview.widget.CardView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></ImageView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center"
            android:id="@+id/floatingActionButton"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:text="Add"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/appBlue" />
    </RelativeLayout>
</RelativeLayout>